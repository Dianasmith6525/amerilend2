# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/amerilend

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth Configuration (Manus Runtime)
OAUTH_SERVER_URL=https://your-oauth-server.com
VITE_APP_ID=your-app-id
OWNER_OPEN_ID=your-owner-open-id

# Social Login (OAuth Providers)
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Google Places API (for address autocomplete)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable "Places API" and "Geocoding API" in your Google Cloud Console
VITE_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Facebook OAuth - Get from: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# Microsoft OAuth - Get from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/auth/microsoft/callback

# Apple OAuth - Get from: https://developer.apple.com/
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_CALLBACK_URL=http://localhost:3000/api/auth/apple/callback

# Server Configuration
NODE_ENV=development
PORT=3000

# Authorize.net Payment Gateway
AUTHORIZENET_API_LOGIN_ID=your-api-login-id
AUTHORIZENET_TRANSACTION_KEY=your-transaction-key
AUTHORIZENET_CLIENT_KEY=your-public-client-key
AUTHORIZENET_SIGNATURE_KEY=your-webhook-signature-key
AUTHORIZENET_ENVIRONMENT=sandbox
# Use "production" for live transactions

# Cryptocurrency Payment Gateway (Coinbase Commerce)
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key
COINBASE_COMMERCE_WEBHOOK_SECRET=your-webhook-secret
CRYPTO_PAYMENT_ENVIRONMENT=sandbox
# Use "production" for live crypto payments

# Your Personal Cryptocurrency Wallets (for receiving processing fees)
# IMPORTANT: These are RECEIVING addresses (public keys) only
# NEVER put private keys here!
# Replace with YOUR actual wallet addresses
CRYPTO_WALLET_BTC=bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh
CRYPTO_WALLET_ETH=0x71C7656EC7ab88b098defB751B7401B5f6d8976F
CRYPTO_WALLET_USDT_ETH=0x71C7656EC7ab88b098defB751B7401B5f6d8976F
CRYPTO_WALLET_USDC_ETH=0x71C7656EC7ab88b098defB751B7401B5f6d8976F
# Note: USDT and USDC use Ethereum addresses (ERC-20 tokens)

# Optional: Manus Forge API (for AI features)
BUILT_IN_FORGE_API_URL=https://forge-api.manus.space
BUILT_IN_FORGE_API_KEY=your-forge-api-key

# Email Configuration (for OTP and notifications)
# SendGrid: https://sendgrid.com/
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# SMS Configuration (for SMS OTP)
# Twilio: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------
# TestSprite (testsprite.com) - local test runner
# Obtain your TestSprite API key from your account settings and place it below.
# Example: TESTSPRITE_API_KEY=sk_test_abc123
TESTSPRITE_API_KEY=sk_test_your_key_here

# The URL your TestSprite tests should target (your local dev server)
TESTSPRITE_TARGET_URL=http://localhost:3001

# Optional: custom TestSprite API endpoint
TESTSPRITE_API_URL=https://api.testsprite.com
